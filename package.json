{
  "private": true,
  "packageManager": "yarn@3.2.1",
  "type": "module",
  "engines": {
    "node": ">=16.13.0"
  },
  "scripts": {
    "prepare": "yarn build:wasm && svelte-kit sync",
    "dev": "vite",
    "build": "yarn build:wasm && vite build",
    "build:wasm": "wasm-pack build crate --release --out-name=lib --scope tedbyron --target web",
    "preview": "vite preview",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-check --watch --tsconfig ./tsconfig.json",
    "lint": "prettier -c --ignore-path .gitignore --plugin-search-dir=. . '!.yarn' && eslint --ignore-path .gitignore .",
    "format": "prettier -w --ignore-path .gitignore --plugin-search-dir=. . '!.yarn'"
  },
  "dependencies": {
    "@fontsource/press-start-2p": "^4.5.9",
    "@pixi/constants": "^6.4.2",
    "@pixi/core": "^6.4.2",
    "@pixi/math": "^6.4.2",
    "@pixi/runner": "^6.4.2",
    "@pixi/settings": "^6.4.2",
    "@pixi/ticker": "^6.4.2",
    "@pixi/utils": "^6.4.2",
    "golem": "file:pkg",
    "svelte-pixi": "^0.1.3"
  },
  "devDependencies": {
    "@sveltejs/adapter-cloudflare": "^1.0.0-next.30",
    "@sveltejs/kit": "^1.0.0-next.384",
    "@typescript-eslint/eslint-plugin": "^5.30.7",
    "@typescript-eslint/parser": "^5.30.7",
    "autoprefixer": "^10.4.7",
    "cssnano": "^5.1.12",
    "cssnano-preset-advanced": "^5.3.8",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard-with-typescript": "^22.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.2.4",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-svelte3": "^4.0.0",
    "postcss": "^8.4.14",
    "prettier": "^2.7.1",
    "prettier-plugin-tailwindcss": "^0.1.12",
    "svelte": "^3.49.0",
    "svelte-check": "^2.8.0",
    "svelte-preprocess": "^4.10.7",
    "tailwindcss": "^3.1.6",
    "typescript": "^4.7.4",
    "vite": "^3.0.2",
    "vite-plugin-wasm-pack": "^0.1.12"
  }
}
